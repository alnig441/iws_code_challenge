{% endblock %}
        
{% block footer %}

    {% if timesheets.timesheets %} 
        <button id='exported' type='button' onclick="setFlag()" value=1><a href='timesheets.csv' download>Download CSV</a></button>
    {% endif %}

{% endblock %}